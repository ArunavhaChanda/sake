OBJS = ast.cmx header_generator.cmx llvm_generator.cmx parser.cmx scanner.cmx sake.cmx

sake : $(OBJS)
	# ocamlc -o sake $(OBJS)
	ocamlfind ocamlopt -linkpkg -package llvm -package llvm.analysis $(OBJS) -o sake 

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc -v parser.mly

%.cmo : %.ml
	ocamlc -c $<

%.cmi : %.mli
	ocamlc -c $<

%.cmx : %.ml
	ocamlfind ocamlopt -c -package llvm $<

hello : #TODO this needs to somehow be linked to ll file 
	llvm-as hello.ll
	llc *.bc
	gcc -c -o hello_wrapper.o hello_wrapper.c hello.h
	gcc -o hello *.s hello_wrapper.o

# hello:
# 	gcc -c -o hello_wrapper.o hello_wrapper.c hello.h 
# 	DO WE LINK THESES???? 
# 	ocaml-build -use-ocamlfind -pkgs llvm,llvm-analysis -cflags -w,+1=4 hello 
#
#NEED TO COMPILE THE LL FILE TO A O FILE


.PHONY : clean
clean :
	rm -f sake parser.ml parser.mli scanner.ml *.cmo *.cmi *.output

# Generated by ocamldep *.ml *.mli
ast.cmo :
ast.cmx :
header_generator.cmo : ast.cmo
header_generator.cmx : ast.cmx
llvm_generator.cmo : ast.cmo
llvm_generator.cmx : ast.cmx	
sake.cmo: scanner.cmo parser.cmi header_generator.cmo llvm_generator.cmo ast.cmo
sake.cmx: scanner.cmx parser.cmx header_generator.cmx llvm_generator.cmx ast.cmx
parser.cmo: ast.cmo parser.cmi
parser.cmx: ast.cmx parser.cmi
scanner.cmo: parser.cmi
scanner.cmx: parser.cmx
# semantic.cmo : ast.cmo
# semantic.cmx : ast.cmx
parser.cmi: ast.cmo
